{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveSymlinks": false,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "inlineSourceMap": true,
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "lib/**/*.js",
    "lib/**/*.ts",
    "lambda/**/*.js",
    "lambda/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.ts"
  ]
}
